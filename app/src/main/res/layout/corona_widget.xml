<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_bg"
    android:layout_margin="10dp"
    android:theme="@style/ThemeOverlay.CoronaAlert.AppWidgetContainer"
    android:orientation="vertical"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/widget_top_layout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/widget_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/round_bg"
            android:backgroundTint="#FF7925"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:elevation="5dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/widget_stage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단계"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/widget_instruction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_top_layout"
        android:background="@drawable/round_bg"
        android:backgroundTint="#E0E0E0"
        android:elevation="5dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/item_more_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지침"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_chevron_right_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_list_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="□ 중점관리시설: 유흥시설 5종 집합금지, 이외 시설은 21시 이후 운영 중단 등 제한 강화, 위반시 원스트라이크아웃제"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="□  일반관리시설: 이용인원 제한 강화, 위험도 높은 활동 금지"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="□ 국공립시설 : 경륜,경마 등 중단, 이외시설 30% 인원 제한"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="□ 모임,행사: 100인이상 금지"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스포츠관람: 관중 입장(10%)"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_time_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="6. 14. 오후 1:20"/>

            <ImageView
                android:id="@+id/widget_reload_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_autorenew_24"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10dp"
                android:layout_margin="10dp"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>